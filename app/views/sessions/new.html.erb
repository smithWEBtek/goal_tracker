<h1>Login</h1>

<%= form_for(:session, url: login_path) do |f| %>
  <div class="form-group">
    <%= f.label :username, "Username:" %><br />
    <%= f.text_field :username %>
  </div>

  <div class="form-group">
    <%= f.label :password, "Password:" %><br />
    <%= f.password_field :password %>
  </div>

  <div class="actions">
    <%= f.submit "Login" %>
  </div>
<% end %>
