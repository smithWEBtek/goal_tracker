<h1><%= @goal.name %></h1>
<h2><%= @goal.summary %></h2>
<h3><%= "Goal is Complete" if @goal.completed %></h3>

<p><%= link_to "Edit This Goal", edit_goal_path(@goal) %></p>
<p><%= link_to "Delete This Goal", goal_path(@goal), method: :delete, data: { confirm: "Are you sure? Any associated tasks will be deleted as well" } %></p>

<% if @goal.completed %>
  <p><%= link_to "Mark As Incomplete", incomplete_path(@goal), method: :patch %></p>
<% else %>
  <p><%= link_to "Mark As Complete", complete_path(@goal), method: :patch %></p>
<% end %>
